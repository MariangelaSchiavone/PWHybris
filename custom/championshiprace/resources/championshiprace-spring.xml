<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.1.xsd">

	<context:component-scan base-package="it.gruppofanta.championship" />


	<bean id="vehicleData" class="it.gruppofanta.championshiprace.data.VehicleData" scope="prototype" />
	
	<alias name="defaultVehicleConverter" alias="vehicleConverter" />
	<bean id="defaultVehicleConverter" parent="abstractPopulatingConverter">
		<lookup-method name="createTarget" bean="vehicleData" />
		<property name="populators">
			<list>
				<ref bean="vehiclePopulator" />
			</list>
		</property>
	</bean>
	
	<alias alias="vehiclePopulator" name="defaultVehiclePopulator" />
	<bean id="defaultVehiclePopulator" class="it.gruppofanta.championshiprace.populators.DefaultVehiclePopulator" scope="prototype" />
	
	<bean id="stableData" class="it.gruppofanta.championshiprace.data.StableData" scope="prototype" />

	<bean id="driverData" class="it.gruppofanta.championshiprace.data.DriverData" scope="prototype" />

	<bean id="placingData" class="it.gruppofanta.championshiprace.data.PlacingData" scope="prototype" />

	<bean id="GranPrixData" class="it.gruppofanta.championshiprace.data.GranPrixData" scope="prototype" />

	<bean id="driverEntryData" class="it.gruppofanta.championshiprace.data.DriverEntryData" scope="prototype" /><alias name="defaultGranPrixConverter" alias="granPrixConverter" />

	<bean id="stableEntryData" class="it.gruppofanta.championshiprace.data.StableEntryData" scope="prototype" />
	
	<bean id="driverRankingData" class="it.gruppofanta.championshiprace.data.DriverRankingData" scope="prototype" />

	<bean id="stableRankingData" class="it.gruppofanta.championshiprace.data.StableRankingData" scope="prototype" />

	<bean id="raceChampionshipData" class="it.gruppofanta.championshiprace.data.RaceChampionshipData" scope="prototype" />
	
	<alias name="defaultDriverFacade" alias="driverFacade"/>
    <bean id="defaultDriverFacade" class="it.gruppofanta.championshiprace.facades.impl.DefaultDriverFacade">
        <property name="driverService" ref="driverService"/>
    </bean>
    
    <alias name="defaultStableFacade" alias="stableFacade"/>
    <bean id="defaultStableFacade" class="it.gruppofanta.championshiprace.facades.impl.DefaultStableFacade">
        <property name="stableService" ref="stableService"/>
    </bean>
    
    <alias name="defaultGranPrixFacade" alias="granPrixFacade"/>
    <bean id="defaultGranPrixFacade" class="it.gruppofanta.championshiprace.facades.impl.DefaultGranPrixFacade">
        <property name="granPrixService" ref="granPrixService"/>
    </bean>
    
    <alias name="defaultRaceChampionshipFacade" alias="raceChampionshipFacade"/>
    <bean id="defaultRaceChampionshipFacade" class="it.gruppofanta.championshiprace.facades.impl.DefaultRaceChampionshipFacade">
        <property name="raceChampionshipService" ref="raceChampionshipService"/>
        <property name="vehicleConverter" ref="vehicleConverter"/>
    </bean>
    
</beans>
